{
  "bracketSpacing": true,
  "bracketSameLine": true,
  "semi": true,
  "printWidth": 100,
  "trailingComma": "none",
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "arrowParens": "always",
  "jsxSingleQuote": false,
  "importOrder": [
    "^\\$\\/",
    "^@(ui)/(.*)$",
    "^@(repo)/(.*)$",
    "^\\$lib/(.*)$",
    "^\\$components/(.*)$",
    "^\\$(core)/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"]
}
