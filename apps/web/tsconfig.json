{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ui/components/*": ["../../packages/ui/components/*"],
      "@ui/icons/*": ["../../packages/ui/icons/*"],
      "@ui/lib/*": ["../../packages/ui/lib/*"],
      "$/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./.eslintrc.cjs",
    "../../packages/ui/**/*.tsx",
    "../../packages/ui/**/*.ts",
    "../../packages/trpc/**/*.ts",
    "../../packages/drizzle/**/*.ts",
    "./next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "./.nextjs"]
}
